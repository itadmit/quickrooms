// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// SQLite doesn't support enums, so we use String
// UserRole: OWNER, MEMBER, GUEST
// PaymentStatus: PENDING, COMPLETED, FAILED, REFUNDED

model Owner {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String
  spaceName     String
  plan          String?  // מסלול
  phone         String?  // טלפון
  address       String?  // כתובת
  allowOveruse  Boolean  @default(false) // האם לאפשר חריגת קרדיט
  // Payment Settings
  paymeSellerId String?  // PayMe Seller ID
  paymeEnvironment String? @default("sandbox") // sandbox או production
  paymeWebhookSecret String? // Webhook secret לאימות
  paymentEnabled Boolean @default(false) // האם תשלומים מופעלים
  // Email Settings (SMTP)
  smtpHost String? // SMTP Host (default: smtp.gmail.com)
  smtpPort Int? // SMTP Port (default: 587)
  smtpSecure Boolean @default(false) // Use SSL/TLS
  smtpUser String? // SMTP Username (email)
  smtpPass String? // SMTP Password (App Password)
  emailEnabled Boolean @default(false) // האם אימיילים מופעלים
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  spaces        Space[]
  bookings      Booking[]
  members       Member[]
  transactions  Transaction[]
  creditPlans   MemberCreditPlan[]
  pendingPayments PendingPayment[]
  brandingSettings BrandingSettings?
  invoiceTemplates InvoiceTemplate[]
  automationRules AutomationRule[]
  webhooks      Webhook[]
  auditLogs     AuditLog[]
  quotes        Quote[]
}

model Space {
  id          String   @id @default(cuid())
  name        String
  address     String
  logo        String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  owner       Owner          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  meetingRooms MeetingRoom[]
}

model MeetingRoom {
  id                String   @id @default(cuid())
  name              String
  capacity          Int
  images            String   // Comma separated URLs (SQLite limitation)
  creditsPerHour    Int      // קרדיטים לשעה
  pricePerHour      Float    // מחיר לשעה לאורח (USD)
  operatingHours    String?  // JSON string (SQLite limitation)
  minDurationMinutes Int     @default(60) // מינימום זמן לפגישה (בדקות)
  timeIntervalMinutes Int    @default(30) // קפיצות זמן (בדקות: 15, 30, 60)
  amenities         String?  // JSON string - רשימת אמניטיז (WiFi, TV, WhiteBoard, Coffee, etc.)
  specialInstructions String? // הנחיות מיוחדות מהמנהל
  description       String?  // תיאור החדר
  floor            String?  // קומה
  spaceId           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  space             Space     @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  bookings          Booking[]
  pendingPayments   PendingPayment[]
  waitlistEntries   WaitlistEntry[]
  ratings           RoomRating[]
  quotes            Quote[]
}

model Member {
  id                String   @id @default(cuid())
  name              String
  email             String   @unique
  username          String   @unique
  password          String
  phone             String?  // מספר טלפון
  creditBalance     Int      @default(0)
  creditPlanId      String?
  ownerId           String
  allowOveruse      Boolean  @default(false) // האם לאפשר חריגה
  lastCreditReset   DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  owner             Owner            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  creditPlan        MemberCreditPlan? @relation(fields: [creditPlanId], references: [id])
  bookings          Booking[]
  transactions      Transaction[]
  pendingPayments   PendingPayment[]
  notes             MemberNote[]
  waitlistEntries   WaitlistEntry[]
  ratings           RoomRating[]
  quotes            Quote[]
}

model MemberCreditPlan {
  id          String   @id @default(cuid())
  name        String
  credits     Int      // כמות קרדיט חודשית
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  owner       Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members     Member[]
}

model Booking {
  id              String        @id @default(cuid())
  roomId          String
  ownerId         String
  memberId        String?
  guestEmail      String?
  guestName       String?
  startTime       DateTime
  endTime         DateTime
  hours           Int
  creditsUsed     Int?
  priceCharged    Float?
  paymentStatus   String        @default("PENDING") // SQLite limitation (Enum -> String)
  // Recurring Booking
  recurringBookingId String?     // ID של ההזמנה החוזרת הראשית
  isRecurring     Boolean        @default(false)
  recurringPattern String?       // JSON: {type: "weekly"/"monthly", days: [1,3,5], endDate: Date}
  // Check-in/Check-out
  checkedIn       Boolean        @default(false)
  checkedInAt     DateTime?
  checkedOut      Boolean        @default(false)
  checkedOutAt     DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  room            MeetingRoom   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  owner           Owner         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  member          Member?       @relation(fields: [memberId], references: [id], onDelete: SetNull)
  transactions    Transaction[]
  waitlistEntries WaitlistEntry[]
  qrCode          BookingQRCode?
  recurringInstances Booking[]  @relation("RecurringBooking")
  parentRecurring Booking?      @relation("RecurringBooking", fields: [recurringBookingId], references: [id])
  rating            RoomRating?
  quote             Quote?
}

model Transaction {
  id              String        @id @default(cuid())
  bookingId       String?
  ownerId         String
  memberId        String?
  guestEmail      String?
  amount          Float
  currency        String        @default("USD")
  paymentStatus   String        // SQLite limitation (Enum -> String)
  paypalId        String?
  paypalData      String?       // JSON string (SQLite limitation)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  owner           Owner         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  booking         Booking?      @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  member          Member?       @relation(fields: [memberId], references: [id], onDelete: SetNull)
}

model PendingPayment {
  id              String        @id @default(cuid())
  transactionId  String        @unique // PayMe transaction_id
  paymeSaleId     String?       // PayMe sale ID
  memberId        String
  roomId          String
  ownerId         String
  bookingData     String        // JSON string with startTime, endTime
  amount          Float
  currency        String        @default("ILS")
  paymentStatus   String        @default("PENDING")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  expiresAt       DateTime      // תפוגה אחרי זמן מסוים
  
  member          Member        @relation(fields: [memberId], references: [id], onDelete: Cascade)
  room            MeetingRoom   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  owner           Owner         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

model Notification {
  id              String        @id @default(cuid())
  userId          String        // ID של Owner או Member
  userRole        String        // OWNER או MEMBER
  type            String        // BOOKING_REMINDER, BOOKING_CONFIRMED, LOW_CREDITS, MONTHLY_REPORT, etc.
  title           String
  message         String
  link            String?       // קישור רלוונטי (למשל להזמנה)
  read            Boolean       @default(false)
  emailSent       Boolean       @default(false)
  emailSentAt     DateTime?
  createdAt       DateTime      @default(now())
  
  @@index([userId, userRole])
  @@index([read])
  @@index([createdAt])
}

model MemberNote {
  id        String   @id @default(cuid())
  memberId  String
  content   String   // תוכן ההערה
  createdBy String   // Owner ID שיצר את ההערה
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  
  @@index([memberId])
  @@index([createdAt])
}

// Waitlist - רשימת המתנה
model WaitlistEntry {
  id        String   @id @default(cuid())
  roomId    String
  memberId  String?
  guestEmail String?
  guestName String?
  ownerId   String
  preferredDate DateTime
  preferredStartTime String?  // "HH:mm"
  preferredEndTime String?    // "HH:mm"
  notified  Boolean  @default(false)
  notifiedAt DateTime?
  createdAt DateTime @default(now())
  
  room      MeetingRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  member    Member?     @relation(fields: [memberId], references: [id], onDelete: Cascade)
  booking   Booking?    @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  bookingId String?
  
  @@index([roomId])
  @@index([preferredDate])
  @@index([notified])
}

// QR Code for Bookings
model BookingQRCode {
  id        String   @id @default(cuid())
  bookingId String   @unique
  qrCode    String   // Base64 או URL ל-QR code
  token     String   @unique // Token לאימות
  expiresAt DateTime?
  createdAt DateTime @default(now())
  
  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  
  @@index([token])
}

// Audit Log - לוג כל הפעולות
model AuditLog {
  id        String   @id @default(cuid())
  userId    String   // מי ביצע את הפעולה
  userRole  String   // OWNER, MEMBER, etc.
  action    String   // CREATE, UPDATE, DELETE, LOGIN, etc.
  entityType String  // Booking, Member, Room, etc.
  entityId  String?  // ID של הישות
  details   String?  // JSON עם פרטים נוספים
  ipAddress String?
  userAgent String?
  ownerId   String?  // אם הפעולה קשורה ל-Owner מסוים
  createdAt DateTime @default(now())
  
  owner     Owner?   @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([action])
  @@index([ownerId])
}

// Room Rating - דירוג חדרים
model RoomRating {
  id        String   @id @default(cuid())
  roomId    String
  bookingId String   @unique
  memberId  String?
  rating    Int      // 1-5
  review    String? // ביקורת כתובה
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  room      MeetingRoom @relation(fields: [roomId], references: [id], onDelete: Cascade)
  booking   Booking     @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  member    Member?     @relation(fields: [memberId], references: [id], onDelete: SetNull)
  
  @@index([roomId])
  @@index([rating])
}

// Branding Settings - התאמה אישית
model BrandingSettings {
  id        String   @id @default(cuid())
  ownerId   String   @unique
  logoUrl   String?
  primaryColor String? // Hex color
  secondaryColor String? // Hex color
  companyName String? // שם מותאם במקום "Quick Rooms"
  customDomain String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
}

// Invoice Template - תבנית חשבונית
model InvoiceTemplate {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  template  String   // HTML template
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([ownerId])
}

// Quote - הצעת מחיר
model Quote {
  id        String   @id @default(cuid())
  ownerId   String
  memberId  String?
  guestEmail String?
  guestName String?
  roomId    String
  startTime DateTime
  endTime   DateTime
  hours     Int
  creditsRequired Int?
  price     Float?
  status    String   @default("PENDING") // PENDING, ACCEPTED, REJECTED, EXPIRED
  expiresAt DateTime
  convertedToBookingId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     Owner         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  member    Member?       @relation(fields: [memberId], references: [id], onDelete: SetNull)
  room      MeetingRoom   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  booking   Booking?      @relation(fields: [convertedToBookingId], references: [id], onDelete: SetNull)
  
  @@unique([convertedToBookingId])
  @@index([ownerId])
  @@index([status])
  @@index([expiresAt])
}

// Automation Rule - כללי אוטומציה
model AutomationRule {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  trigger   String   // EVENT, SCHEDULE, CONDITION
  conditions String? // JSON עם תנאים
  actions   String   // JSON עם פעולות לביצוע
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([ownerId])
  @@index([enabled])
}

// Webhook - Webhooks לאירועים
model Webhook {
  id        String   @id @default(cuid())
  ownerId   String
  url       String
  events    String   // JSON array של אירועים
  secret    String   // Secret לאימות
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner     Owner    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([ownerId])
  @@index([enabled])
}

